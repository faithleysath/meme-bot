{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Meme Bot (Auto-select uv)",
      // 使用最新的调试引擎扩展
      "type": "debugpy", 
      "request": "launch",
      // 核心：使用模块运行模式，适配 meme_bot.config 绝对导入
      "module": "meme_bot.main", 
      "console": "integratedTerminal",
      "justMyCode": true,
      // 关键：不要写死路径，自动使用 VS Code 当前选中的解释器
      "python": "${command:python.interpreterPath}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        // 你可以在这里放一些本地调试用的临时环境变量
        "DEBUG": "True"
      },
      "args": []
    }
  ]
}